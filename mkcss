#/bin/bash

if [ "$PRODUCTION" != "" ]
then
    OUTPUT_FILE="public/app.min.css"
    MAP_FILE="public/app.min.css.map"
    EXTRA_OPTS="--compress"
else
    OUTPUT_FILE="public/app.css"
    MAP_FILE="public/app.css.map"
    EXTRA_OPTS=""
fi

lessc "$EXTRA_OPTS" --source-map="$MAP_FILE" app/styles.less "$OUTPUT_FILE"
